# FunciÃ³n para mostrar utilidades
show_utilities() {
    echo -e "ğŸ“‹  Portapapeles\nğŸ¨  Selector de color\nğŸ“¸  Captura de pantalla\nğŸ”  Buscador de archivos\nğŸ“  Regla de pantalla" | $rofi_command -dmenu -p "Utilidades" -selected-row 0
}

# FunciÃ³n para ejecutar aplicaciones de pentesting
run_pentesting() {
    case $1 in
        "ğŸ”  Nmap")
            kitty --class=nmap -e nmap
            ;;
        "ğŸŒ  Wireshark")
            sudo wireshark
            ;;
        "ğŸ“¡  Aircrack-ng")
            kitty --class=aircrack -e aircrack-ng
            ;;
        "ğŸ”  John the Ripper")
            kitty --class=john -e john
            ;;
        "ğŸ’£  Hydra")
            kitty --class=hydra -e hydra
            ;;
        "ğŸ•µï¸   Metasploit")
            kitty --class=msf -e msfconsole
            ;;
        "ğŸ”§  Burp Suite")
            burpsuite
            ;;
        "ğŸ“Š  OWASP ZAP")
            zaproxy
            ;;
    esac
}

# FunciÃ³n para ejecutar aplicaciones del sistema
run_system() {
    case $1 in
        "âš™ï¸   ConfiguraciÃ³n")
            gnome-control-center
            ;;
        "ğŸ“  Administrador de archivos")
            thunar
            ;;
        "ğŸ–¥ï¸   Monitor del sistema")
            kitty --class=htop -e htop
            ;;
        "ğŸ”§  Herramientas del sistema")
            gnome-tweaks
            ;;
        "ğŸ“Š  Monitor de recursos")
            kitty --class=btop -e btop
            ;;
    esac
}

# FunciÃ³n para ejecutar aplicaciones de internet
run_internet() {
    case $1 in
        "ğŸŒ  Firefox")
            firefox
            ;;
        "ğŸ“§  Thunderbird")
            thunderbird
            ;;
        "ğŸ’¬  Telegram")
            telegram-desktop
            ;;
        "ğŸ“±  Discord")
            discord
            ;;
        "ğŸ¥  YouTube")
            firefox https://youtube.com
            ;;
        "ğŸ“º  Netflix")
            firefox https://netflix.com
            ;;
    esac
}

# FunciÃ³n para ejecutar aplicaciones multimedia
run_multimedia() {
    case $1 in
        "ğŸµ  VLC")
            vlc
            ;;
        "ğŸ¨  GIMP")
            gimp
            ;;
        "ğŸ“·  Shotwell")
            shotwell
            ;;
        "ğŸ¬  Kdenlive")
            kdenlive
            ;;
        "ğŸ§  Audacity")
            audacity
            ;;
    esac
}

# FunciÃ³n para ejecutar aplicaciones de oficina
run_office() {
    case $1 in
        "ğŸ“  LibreOffice Writer")
            libreoffice --writer
            ;;
        "ğŸ“Š  LibreOffice Calc")
            libreoffice --calc
            ;;
        "ğŸ“‹  LibreOffice Impress")
            libreoffice --impress
            ;;
        "ğŸ“š  Calibre")
            calibre
            ;;
        "âœï¸   Gedit")
            gedit
            ;;
    esac
}

# FunciÃ³n para ejecutar aplicaciones de desarrollo
run_development() {
    case $1 in
        "ğŸ’»  Neovim")
            kitty --class=nvim -e nvim
            ;;
        "ğŸ”§  Geany")
            geany
            ;;
        "ğŸ  Python")
            kitty --class=python -e python3
            ;;
        "â˜•  Java")
            kitty --class=java -e java
            ;;
        "ğŸ˜  PHP")
            kitty --class=php -e php
            ;;
        "ğŸŒ  Node.js")
            kitty --class=node -e node
            ;;
    esac
}

# FunciÃ³n para ejecutar juegos
run_games() {
    case $1 in
        "ğŸ®  Steam")
            steam
            ;;
        "ğŸ†  Lutris")
            lutris
            ;;
        "ğŸ²  Juegos del sistema")
            gnome-games
            ;;
        "ğŸ•¹ï¸   Emuladores")
            retroarch
            ;;
    esac
}

# FunciÃ³n para ejecutar utilidades
run_utilities() {
    case $1 in
        "ğŸ“‹  Portapapeles")
            copyq show
            ;;
        "ğŸ¨  Selector de color")
            gpick
            ;;
        "ğŸ“¸  Captura de pantalla")
            flameshot gui
            ;;
        "ğŸ”  Buscador de archivos")
            catfish
            ;;
        "ğŸ“  Regla de pantalla")
            screenruler
            ;;
    esac
}

# FunciÃ³n principal
main() {
    # Mostrar categorÃ­as
    category="$(show_categories)"
    
    case $category in
        $pentesting)
            app="$(show_pentesting)"
            run_pentesting "$app"
            ;;
        $system)
            app="$(show_system)"
            run_system "$app"
            ;;
        $internet)
            app="$(show_internet)"
            run_internet "$app"
            ;;
        $multimedia)
            app="$(show_multimedia)"
            run_multimedia "$app"
            ;;
        $office)
            app="$(show_office)"
            run_office "$app"
            ;;
        $development)
            app="$(show_development)"
            run_development "$app"
            ;;
        $games)
            app="$(show_games)"
            run_games "$app"
            ;;
        $utilities)
            app="$(show_utilities)"
            run_utilities "$app"
            ;;
        *)
            exit 0
            ;;
    esac
}

# Ejecutar funciÃ³n principal
main "$@"
