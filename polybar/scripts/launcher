# CategorÃ­as de aplicaciones
pentesting="ğŸ”’  Pentesting"
system="âš™ï¸   Sistema"
internet="ğŸŒ  Internet"
multimedia="ğŸµ  Multimedia"
office="ğŸ“„  Oficina"
development="ğŸ’»  Desarrollo"
games="ğŸ®  Juegos"
utilities="ğŸ› ï¸   Utilidades"

# FunciÃ³n para mostrar categorÃ­as
show_categories() {
    echo -e "$pentesting\n$system\n$internet\n$multimedia\n$office\n$development\n$games\n$utilities" | $rofi_command -dmenu -p "Selecciona categorÃ­a" -selected-row 0
}

# FunciÃ³n para mostrar aplicaciones de pentesting
show_pentesting() {
    echo -e "ğŸ”  Nmap\nğŸŒ  Wireshark\nğŸ“¡  Aircrack-ng\nğŸ”  John the Ripper\nğŸ’£  Hydra\nğŸ•µï¸   Metasploit\nğŸ”§  Burp Suite\nğŸ“Š  OWASP ZAP" | $rofi_command -dmenu -p "Pentesting" -selected-row 0
}

# FunciÃ³n para mostrar aplicaciones del sistema
show_system() {
    echo -e "âš™ï¸   ConfiguraciÃ³n\nğŸ“  Administrador de archivos\nğŸ–¥ï¸   Monitor del sistema\nğŸ”§  Herramientas del sistema\nğŸ“Š  Monitor de recursos" | $rofi_command -dmenu -p "Sistema" -selected-row 0
}

# FunciÃ³n para mostrar aplicaciones de internet
show_internet() {
    echo -e "ğŸŒ  Firefox\nğŸ“§  Thunderbird\nğŸ’¬  Telegram\nğŸ“±  Discord\nğŸ¥  YouTube\nğŸ“º  Netflix" | $rofi_command -dmenu -p "Internet" -selected-row 0
}

# FunciÃ³n para mostrar aplicaciones multimedia
show_multimedia() {
    echo -e "ğŸµ  VLC\nğŸ¨  GIMP\nğŸ“·  Shotwell\nğŸ¬  Kdenlive\nğŸ§  Audacity" | $rofi_command -dmenu -p "Multimedia" -selected-row 0
}

# FunciÃ³n para mostrar aplicaciones de oficina
show_office() {
    echo -e "ğŸ“  LibreOffice Writer\nğŸ“Š  LibreOffice Calc\nğŸ“‹  LibreOffice Impress\nğŸ“š  Calibre\nâœï¸   Gedit" | $rofi_command -dmenu -p "Oficina" -selected-row 0
}

# FunciÃ³n para mostrar aplicaciones de desarrollo
show_development() {
    echo -e "ğŸ’»  Neovim\nğŸ”§  Geany\nğŸ  Python\nâ˜•  Java\nğŸ˜  PHP\nğŸŒ  Node.js" | $rofi_command -dmenu -p "Desarrollo" -selected-row 0
}

# FunciÃ³n para mostrar juegos
show_games() {
    echo -e "ğŸ®  Steam\nğŸ†  Lutris\nğŸ²  Juegos del sistema\nğŸ•¹ï¸   Emuladores" | $rofi_command -dmenu -p "Juegos" -selected-row 0
